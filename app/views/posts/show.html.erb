

<div class="mt-4 p-5 bg-light rounded">

<%= image_tag @post.file.variant(resize: "500x500") %>
<h1 class=""><%= @post.title %></h1>

<p class="lead"><%= @post.description %></p>

<hr class="my-4">

<%= link_to "Edit", edit_post_path(@post), class:"btn btn-secondary btn-lg" %>
<hr class="my-4">

<%= button_to "Delete", @post, method: :delete, class:"btn btn-danger btn-lg"  %>
</div>



<div>
 
<%= link_to "Back to posts", posts_path, class:"btn btn-dark" %>


</div>
